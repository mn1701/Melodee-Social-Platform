{{! Partial for a single post }}
{{!< main }}
<div class="post">
    <div class="post-avatar">
        <img src="{{#if avatar_url}}{{avatar_url}}{{else}}/avatar/{{username}}{{/if}}" alt="Avatar">
    </div>
    <div class="post-content preserve-newlines">
        <h3>{{title}}</h3>
        <p>{{content}}</p>
        <hr>
       
        {{#if mediaPath}}
            {{#ifCond mediaType 'image'}}
                <img src="{{mediaPath}}" alt="Image">
            {{else ifCond mediaType 'audio'}}
                <audio controls>
                    <source src="{{mediaPath}}" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
            {{else ifCond mediaType 'video'}}
                <video controls>
                    <source src="{{mediaPath}}" type="video/mp4">
                    Your browser does not support the video element.
                </video>
            {{/ifCond}}
        {{/if}}
        {{#if mediaUrl}}
            {{#ifCond mediaType 'youtube'}}
                <iframe width="560" height="315" src="{{extractYouTubeEmbedUrl mediaUrl}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            {{else ifCond mediaType 'soundcloud'}}
                <iframe width="100%" height="166" scrolling="no" frameborder="no" allow="autoplay" src="{{mediaUrl}}"></iframe>
            {{/ifCond}}
        {{/if}}



        <div class="post-status-bar">
            {{!-- logging for debugging purposes --}}
            <script>
                console.log('Comparing:', '{{username}}', '{{user.username}}');
            </script>
            {{#ifCond username user.username}}
                <button class="delete-button" data-id="{{id}}"><i class="fas fa-trash-alt"></i></button>
            {{else}}
                <button class="like-button" data-id="{{id}}" data-logged-in="{{loggedIn}}">â™¥</button>
            {{/ifCond}}
            <span>{{likes}} likes</span>
            <span>by {{username}} on {{timestamp}}</span>
        </div>
    </div>
</div>

<script>

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.like-button').forEach(button => {
            button.addEventListener('click', handleLikeClick);
        });

        document.querySelectorAll('.delete-button').forEach(button => {
            button.addEventListener('click', handleDeleteClick);
        });
    });

    function handleLikeClick(event) {
        const postId = event.target.getAttribute('data-id');
        const loggedIn = event.target.getAttribute('data-logged-in') === 'true';
        console.log('Logged In:', loggedIn); // debugging logs
        console.log('Post ID:', postId); // debugging logs

        if (!loggedIn) {
            window.location.href = '/login';
            return;
        }

        fetch(`/like/${postId}`, {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                location.reload();
            }
        });      
    }

    function handleDeleteClick(event) {
        const buttonElement = event.target.closest('.delete-button');
        const postId = buttonElement.getAttribute('data-id');
        fetch(`/delete/${postId}`, {
            method: 'POST'
        }).then(response => {
            if (response.ok) {
                location.reload();
            }
        });
    }    

</script>